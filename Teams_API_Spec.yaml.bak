openapi: 3.0.1
info:
  title: Microsoft Teams API via Graph API
  description: OpenAPI spec for Teams actions using Microsoft Graph API
  version: 1.0.0
servers:
  - url: https://graph.microsoft.com/v1.0
paths:
  /chats:
    get:
      summary: List current user's chats
      operationId: listUserChats
      tags:
        - Chats
      security:
        - bearerAuth: []
      responses:
        '200':
          description: A list of chats
          content:
            application/json:
              schema:
                type: object
                properties:
                  value:
                    type: array
                    items:
                      $ref: '#/components/schemas/Chat'
    post:
      summary: Create a new chat with a specific user
      operationId: createChat
      tags:
        - Chats
      security:
        - bearerAuth: []
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                chatType:
                  type: string
                  enum: [oneOnOne]
                members:
                  type: array
                  items:
                    type: object
                    properties:
                      '@odata.type':
                        type: string
                        example: "#microsoft.graph.aadUserConversationMember"
                      roles:
                        type: array
                        items:
                          type: string
                          example: "owner"
                      userId:
                        type: string
                        example: "{user-id}"
      responses:
        '201':
          description: Chat created successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Chat'
  /chats/{chatId}/messages:
    get:
      summary: Get messages from a specific chat
      operationId: getChatMessages
      tags:
        - Messages
      security:
        - bearerAuth: []
      parameters:
        - name: chatId
          in: path
          required: true
          schema:
            type: string
      responses:
        '200':
          description: List of messages in the chat
          content:
            application/json:
              schema:
                type: object
                properties:
                  value:
                    type: array
                    items:
                      $ref: '#/components/schemas/Message'
    post:
      summary: Send a message to a specific chat
      operationId: sendMessage
      tags:
        - Messages
      security:
        - bearerAuth: []
      parameters:
        - name: chatId
          in: path
          required: true
          schema:
            type: string
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                body:
                  type: object
                  properties:
                    content:
                      type: string
      responses:
        '201':
          description: Message sent successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Message'
components:
  securitySchemes:
    bearerAuth:
      type: http
      scheme: bearer
      bearerFormat: JWT
  schemas:
    Chat:
      type: object
      properties:
        id:
          type: string
        chatType:
          type: string
        createdDateTime:
          type: string
    Message:
      type: object
      properties:
        id:
          type: string
        body:
          type: object
          properties:
            content:
              type: string
